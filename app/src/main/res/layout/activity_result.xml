<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_board2"
    tools:context=".Result">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEquationSelector"
        android:layout_width="363dp"
        android:layout_height="175dp"
        android:layout_marginTop="-190dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewEquationResult">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtViewTitleResult"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:fontFamily="@font/almendra_bold"
                android:gravity="center"
                android:text="@string/resultTitle"
                android:textColor="#2196F3"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewResultValue"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:fontFamily="@font/almendra_bold"
                android:gravity="center"
                tools:text="@string/hintVariableTextBox"
                android:textColor="#040505"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imgViewEquationResult"
        android:layout_width="329dp"
        android:layout_height="146dp"
        android:layout_marginTop="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gummy_blackboard_splash" />

</androidx.constraintlayout.widget.ConstraintLayout>